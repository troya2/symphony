%nav.navbar.navbar-expand-lg.sticky-top.navbar-light.bg-purple
  =link_to root_path, class:'navbar-brand' do
    =image_tag 'Logo idea 1.png', height: 40
  %button.navbar-toggler{type: :button, data:{toggle: :collapse, target:'#navbar-content'}}
    %span.navbar-toggler-icon

  .collapse.navbar-collapse#navbar-content
    %ul.navbar-nav.mr-auto
      - if user_signed_in?
        %li.nav-item=link_to 'Matching', matchings_path, class:'nav-link' + (controller_name ==  'matchings' ? ' active' : '')
        %li.nav-item=link_to 'Messaging', messages_path, class:'nav-link' + (controller_name ==  'messages' ? ' active' : '')
        %li.nav-item=link_to 'Reservations', reservations_path, class:'nav-link' + (controller_name ==  'reservations' ? ' active' : '')
        %li.nav-item=link_to 'LoLa Nodes', nodes_path, class:'nav-link' + (controller_name == 'nodes' ? ' active' : '')
        %li.nav-item=link_to 'Profile', profile_path, class:'nav-link' + (controller_name == 'profiles' ? ' active' : '')
    %ul.navbar-nav
      - if user_signed_in?
        %li.nav-item.d-none.d-lg-block
          %span.navbar-text.text-light Hello #{current_user.display_name}!
        %li.nav-item.d-none.d-lg-block=link_to "Logout", destroy_user_session_path, method: :delete, class:'btn btn-sm btn-outline-light ml-2 mt-1'

        %li.nav-item.d-lg-none
          %span.navbar-text Hello #{current_user.display_name}!
        %li.nav-item.d-lg-none=link_to "Logout", destroy_user_session_path, method: :delete, class:'btn btn-sm btn-outline-dark ml-2 mt-1'
      - else
        %li.nav-item.d-none.d-lg-block=link_to "Sign Up", new_user_registration_path, class:'btn btn-sm btn-light ml-2 mt-1'
        %li.nav-item.d-none.d-lg-block=link_to "Login", new_user_session_path, class:'btn btn-sm btn-outline-light ml-2 mt-1'

        %li.nav-item.d-lg-none.text-center
          =link_to "Sign Up", new_user_registration_path, class:'btn btn-sm btn-outline-dark ml-2 mt-1'
          =link_to "Login", new_user_session_path, class:'btn btn-sm btn-outline-dark ml-2 mt-1'

